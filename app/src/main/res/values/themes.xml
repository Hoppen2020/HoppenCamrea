<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CamreaDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--默认的Dialog样式-->
    <style name="CommonDialog" parent="@android:style/Theme.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--浮动-->
        <item name="android:windowIsFloating">true</item>
        <!--透明-->
        <item name="android:windowIsTranslucent">false</item>
        <!--标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景颜色-->
        <item name="android:background">@android:color/transparent</item>
        <!--背景颜色-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>


        <item name="textAllCaps">false</item>
    </style>

    <style name="CommonDialogLight" parent="@android:style/Theme.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--浮动-->
        <item name="android:windowIsFloating">true</item>
        <!--透明-->
        <item name="android:windowIsTranslucent">false</item>
        <!--标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景颜色-->
        <item name="android:background">@android:color/transparent</item>
        <!--背景颜色-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">false</item>

    </style>
</resources>