<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btn_stop"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Stop"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_start"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Stop"
            android:onClick="onClick"
            />

    </LinearLayout>

    <co.hoppen.cameralib.widget.UVCCameraTextureView
        android:id="@+id/ttv_display"
        android:layout_width="800dp"
        android:layout_height="600dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="50dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_status"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="已断开"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_water"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btn_rgb"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="RGB"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_uv"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="UV"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_polarized"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="polarized"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_close"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="close"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/btn_id"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="id"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/btn_water"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="water"
            android:onClick="onClick"
            />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text=""
            />

    </LinearLayout>



</LinearLayout>
